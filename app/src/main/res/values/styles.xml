    <declare-styleable name="ScrollOverListFooter">
        <attr format="boolean" name="use_border"/>
        <attr format="reference" name="footer_divider"/>
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="fab_colorPressed" format="color" />
        <attr name="fab_colorNormal" format="color" />
        <attr name="fab_colorRipple" format="color" />
        <attr name="fab_colorDisabled" format="color" />
        <attr name="fab_shadow" format="boolean" />
        <attr name="fab_type" format="enum">
            <enum name="normal" value="0" />
            <enum name="mini" value="1" />
        </attr>
    </declare-styleable>

    <style name="dialog_fullscreen">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="wheelViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">3</item>
        <item name="lineColor">@color/blue_light</item>
        <item name="bottomLineColor">@color/transparent</item>
        <item name="lineHeight">3dp</item>
        <item name="firstLineAndSecondLineSpace">10dp</item>
        <item name="maskHight">32dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#998b8b8b</item>
        <item name="normalTextSize">16sp</item>
        <item name="selectedTextColor">#222222</item>
        <item name="selectedTextSize">20sp</item>
        <item name="unitHight">50dp</item>
    </style>

    <!-- 右上角popupwindow -->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
