<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/my_travel_detail_bg"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/blue_light1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/black_transparent1"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/note_share_btn"
            android:layout_marginRight="8dp"
            android:background="@drawable/like_marker_off_icon"/>
        <Button
            android:id="@+id/note_share_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/photo_select_icon"/>
        <TextView
            android:id="@+id/my_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:text="title"
            android:textSize="9pt"
            android:textColor="@color/white"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/detail_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-03-16"
                android:textSize="8pt"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="26dp"
            android:background="@color/divider_1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/detail_seen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.2k"
                android:textSize="8pt"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="26dp"
            android:background="@color/divider_1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/detail_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="8pt"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_1"/>

</LinearLayout>